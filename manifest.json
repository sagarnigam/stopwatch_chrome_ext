{
  "manifest_version": 3,
  "name": "Stopwatch",
  "version": "1.0",
  "description": "A simple stopwatch Chrome extension.",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "time.png",
      "32": "time.png",
      "48": "time.png",
      "128": "time.png"
    }
  },
  "icons": {
    "16": "time.png",
    "32": "time.png",
    "48": "time.png",
    "128": "time.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["alarm.wav"],
      "matches": ["<all_urls>"]
    }
  ]
}